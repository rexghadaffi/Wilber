@model Models.Admin

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Admin Account</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true)

     @{ Html.RenderPartial("~/Views/Shared/_CreateAccount.cshtml"); }

        <div class="form-group">
            @Html.LabelFor(model => model.adminType, new { @class = "control-label col-md-2" })
            <div class="col-md-2">              
               @Html.DropDownListFor(model => model.adminType, new List<SelectListItem>
            {
            new SelectListItem { Text = "Admin", Value = "Admin"},
            new SelectListItem { Text = "Dean", Value = "Dean"},
               new SelectListItem { Text = "DSA", Value = "DSA"}
            }, "Select Type", new { @class = "form-control col-md-3" })
                @Html.ValidationMessageFor(model => model.adminType)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
