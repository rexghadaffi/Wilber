@model Models.Borrower

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Borrower</h4>
        <hr />
        @Html.ValidationSummary(true)

            @{ Html.RenderPartial("~/Views/Shared/_CreateAccount.cshtml"); }

        <div class="form-group">
            @Html.LabelFor(model => model.clientType, new { @class = "control-label col-md-2" })
            <div class="col-md-2">              
               @Html.DropDownListFor(model => model.clientType, new List<SelectListItem>
            {
            new SelectListItem { Text = "Faculty", Value = "Faculty"}
                      
            }, "Select Type", new { @class = "form-control col-md-3" })
                @Html.ValidationMessageFor(model => model.clientType)
            </div>
        </div>    
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
