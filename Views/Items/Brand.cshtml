@model IEnumerable<Models.ItemBrand>

@{
    ViewBag.Title = "Brand";
}

<h2>Brand</h2>


<p>
    @Html.ActionLink("Create New", "Create", new { id = 1 })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBrand", new { id=item.brandID, content = 1 })          
        </td>
    </tr>
}

</table>
